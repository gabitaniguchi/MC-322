    </VBox>

    <VBox spacing="3" alignment="CENTER" style="-fx-padding: 10 0 0 0;">
        <Label text="Ingresso desejado:" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
        <Label fx:id="eventoLabel" text="Evento:" style="-fx-font-size: 14px;"/>
        <Label fx:id="dataLabel" text="Data:" style="-fx-font-size: 14px;"/>
        <Label fx:id="localLabel" text="Local:" style="-fx-font-size: 14px;" />
        <Label fx:id="precoLabel" text="PreÃ§o:" style="-fx-font-size: 14px;-fx-font-weight: bold;" />
    </VBox>

    <VBox spacing="10" alignment="CENTER" style="-fx-padding: 30 0 0 0;">
        <Label text="Pagamento:" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
        <TextField fx:id="precoIngresso" maxWidth="150" promptText="Insira o valor" />
        <Button text="Confirmar Compra" onAction="#handleConfirmarCompra" />
